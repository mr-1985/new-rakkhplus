@section Scripts{ 
    
    <script>
        $("#OstanId").change(function () {
          
            $("#Agent_City").empty();
            $.getJSON("/home/GetCityByOstanId/" + $("#OstanId :selected").val(),
                function (data) {
                    $.each(data,
                        function () {
                            $("#Agent_City")
                                .append('<option value=' + this.value + '>' + this.text + '</option>');
                        });
                });
        });
    </script>

}







