    Layout = "Shared/_AdminLayout";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">بارگذاری مدارک نمایندگی </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<style>
    .img-thumbnail {
        max-height: 108px !important;
        min-height: 108px;
    }

    .view-first img {
        transition: all .2s linear;
